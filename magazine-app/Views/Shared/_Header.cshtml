<!-- Header Navigation -->
<header class="bg-dark-navy text-white sticky top-0 z-50 shadow-lg">
    <nav class="container mx-auto px-3 sm:px-4 py-3 sm:py-4 max-w-full overflow-hidden">
        <div class="flex items-center justify-between gap-2 min-w-0">
            <!-- Logo -->
            <div class="flex items-center flex-shrink-0">
                <a asp-controller="Home" asp-action="Index" class="flex items-center">
                    <img src="~/images/logo.png" alt="Travelogue PK" class="h-8 sm:h-10 md:h-12 transition-all duration-300" onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
                    <div style="display:none;" class="text-lg sm:text-xl md:text-2xl font-bold">
                        <span class="text-white">TRAVEL</span><span class="text-primary-orange">OGUE</span> <span class="text-primary-orange">PK</span>
                    </div>
                </a>
            </div>
            
            <!-- Desktop Navigation -->
            <div class="hidden lg:flex items-center space-x-2 xl:space-x-4 2xl:space-x-8 flex-shrink-0">
                <a asp-controller="Home" asp-action="Index" class="hover:text-primary-orange transition-colors font-medium text-xs xl:text-sm 2xl:text-base whitespace-nowrap">Home</a>
                <a asp-controller="About" asp-action="Index" class="hover:text-primary-orange transition-colors font-medium text-xs xl:text-sm 2xl:text-base whitespace-nowrap">About Us</a>
                <a asp-controller="Categories" asp-action="Index" class="hover:text-primary-orange transition-colors font-medium text-xs xl:text-sm 2xl:text-base whitespace-nowrap">Categories</a>
                <a asp-controller="Contact" asp-action="Index" class="hover:text-primary-orange transition-colors font-medium text-xs xl:text-sm 2xl:text-base whitespace-nowrap">Contact Us</a>
            </div>
            
            <!-- Right Side Buttons -->
            <div class="hidden lg:flex items-center space-x-1 xl:space-x-2 2xl:space-x-4 flex-shrink-0 min-w-0">
                <!-- Search Button -->
                <button id="search-button" class="bg-primary-blue hover:bg-blue-600 text-white p-2 sm:p-2.5 rounded-lg transition-all flex items-center justify-center min-w-[40px]">
                    <i class="fas fa-search text-sm sm:text-base"></i>
                </button>
                
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <!-- Logged In User -->
                    <span class="text-white text-xs xl:text-sm hidden 2xl:inline truncate max-w-[120px]">Hello, @User.Identity.Name</span>
                    
                    @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                    {
                        <!-- Admin Dashboard -->
                        <a asp-controller="AdminDashboard" asp-action="Index" class="bg-gradient-to-r from-purple-600 to-purple-700 hover:from-purple-700 hover:to-purple-800 text-white px-2 xl:px-3 2xl:px-6 py-1.5 xl:py-2 rounded-lg font-medium transition-all flex items-center shadow-lg text-[10px] xl:text-xs 2xl:text-sm whitespace-nowrap">
                            <i class="fas fa-tachometer-alt mr-1"></i><span class="hidden 2xl:inline">ADMIN DASHBOARD</span><span class="2xl:hidden">ADMIN</span>
                        </a>
                    }
                    else if (User.IsInRole("Uploader"))
                    {
                        <!-- Employee Dashboard -->
                        <a asp-controller="GuideAdmin" asp-action="Index" class="bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-2 xl:px-3 2xl:px-6 py-1.5 xl:py-2 rounded-lg font-medium transition-all flex items-center shadow-lg text-[10px] xl:text-xs 2xl:text-sm whitespace-nowrap">
                            <i class="fas fa-upload mr-1"></i><span class="hidden 2xl:inline">EMPLOYEE PANEL</span><span class="2xl:hidden">EMPLOYEE</span>
                        </a>
                    }
                    else if (User.IsInRole("Customer"))
                    {
                        <!-- Customer Dashboard -->
                        <a asp-controller="UserDashboard" asp-action="Index" class="bg-gradient-to-r from-primary-orange to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white px-2 xl:px-3 2xl:px-6 py-1.5 xl:py-2 rounded-lg font-medium transition-all flex items-center shadow-lg text-[10px] xl:text-xs 2xl:text-sm whitespace-nowrap">
                            <i class="fas fa-user-circle mr-1"></i><span class="hidden 2xl:inline">MY DASHBOARD</span><span class="2xl:hidden">DASHBOARD</span>
                        </a>
                    }
                    
                    <a asp-controller="Guide" asp-action="Index" class="border-2 border-white hover:bg-white hover:text-dark-navy px-2 xl:px-3 2xl:px-6 py-1.5 xl:py-2 rounded-lg font-medium transition-all flex items-center text-[10px] xl:text-xs 2xl:text-sm whitespace-nowrap">
                        <i class="fas fa-book mr-1"></i><span class="hidden 2xl:inline">MAGAZINES</span><span class="2xl:hidden">BOOKS</span>
                    </a>
                    
                    <a asp-controller="Favorite" asp-action="Index" class="border-2 border-primary-orange bg-primary-orange hover:bg-orange-600 text-white px-2 xl:px-3 2xl:px-6 py-1.5 xl:py-2 rounded-lg font-medium transition-all flex items-center text-[10px] xl:text-xs 2xl:text-sm whitespace-nowrap">
                        <i class="fas fa-heart mr-1"></i><span class="hidden 2xl:inline">FAVORITES</span><span class="2xl:hidden">FAVS</span>
                    </a>
                    
                    <form asp-controller="Account" asp-action="Logout" method="post" class="inline">
                        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-2 xl:px-3 2xl:px-6 py-1.5 xl:py-2 rounded-lg font-medium transition-all flex items-center text-[10px] xl:text-xs 2xl:text-sm whitespace-nowrap">
                            <i class="fas fa-sign-out-alt mr-1"></i><span class="hidden 2xl:inline">LOGOUT</span><span class="2xl:hidden">OUT</span>
                        </button>
                    </form>
                }
                else
                {
                    <!-- Not Logged In -->
                    <a asp-controller="Account" asp-action="Login" class="border-2 border-white hover:bg-white hover:text-dark-navy px-2 xl:px-3 2xl:px-6 py-1.5 xl:py-2 rounded-lg font-medium transition-all flex items-center text-[10px] xl:text-xs 2xl:text-sm whitespace-nowrap">
                        <i class="fas fa-user mr-1"></i>LOGIN
                    </a>
                    
                    <a asp-controller="Account" asp-action="Register" class="bg-primary-orange hover:bg-orange-600 text-white px-2 xl:px-3 2xl:px-6 py-1.5 xl:py-2 rounded-lg font-medium transition-all flex items-center text-[10px] xl:text-xs 2xl:text-sm whitespace-nowrap">
                        <i class="fas fa-user-plus mr-1"></i>SIGN UP
                    </a>
                }
            </div>
            
            <!-- Mobile Menu Button -->
            <button id="mobile-menu-button" class="lg:hidden text-white focus:outline-none p-2 hover:bg-white/10 rounded-lg transition-all">
                <i class="fas fa-bars text-xl sm:text-2xl"></i>
            </button>
        </div>
        
        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden lg:hidden mt-4 pb-4 border-t border-gray-700 pt-4">
            <div class="flex flex-col space-y-3">
                <!-- Search Button for Mobile -->
                <button id="mobile-search-button" class="w-full bg-primary-blue hover:bg-blue-600 text-white px-4 py-2.5 rounded-lg transition-all flex items-center justify-center font-medium">
                    <i class="fas fa-search mr-2"></i>Search
                </button>
                
                <!-- Navigation Links -->
                <a asp-controller="Home" asp-action="Index" class="hover:text-primary-orange transition-colors font-medium py-2 px-2 rounded-lg hover:bg-white/10">Home</a>
                <a asp-controller="About" asp-action="Index" class="hover:text-primary-orange transition-colors font-medium py-2 px-2 rounded-lg hover:bg-white/10">About Us</a>
                <a asp-controller="Categories" asp-action="Index" class="hover:text-primary-orange transition-colors font-medium py-2 px-2 rounded-lg hover:bg-white/10">Categories</a>
                <a asp-controller="Guide" asp-action="Index" class="hover:text-primary-orange transition-colors font-medium py-2 px-2 rounded-lg hover:bg-white/10">Magazines</a>
                <a asp-controller="Contact" asp-action="Index" class="hover:text-primary-orange transition-colors font-medium py-2 px-2 rounded-lg hover:bg-white/10">Contact Us</a>
                
                <div class="pt-4 border-t border-gray-600 space-y-2">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="text-sm text-gray-300 px-2 py-1">Hello, @User.Identity.Name</div>
                        
                        <a asp-controller="Favorite" asp-action="Index" class="block w-full bg-primary-orange hover:bg-orange-600 text-white px-4 py-3 rounded-lg font-medium transition-all text-center">
                            <i class="fas fa-heart mr-2"></i>MY FAVORITES
                        </a>
                        @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                        {
                            <a asp-controller="AdminDashboard" asp-action="Index" class="block w-full bg-gradient-to-r from-purple-600 to-purple-700 text-white px-4 py-3 rounded-lg font-medium transition-all text-center">
                                <i class="fas fa-tachometer-alt mr-2"></i>ADMIN DASHBOARD
                            </a>
                        }
                        else if (User.IsInRole("Uploader"))
                        {
                            <a asp-controller="GuideAdmin" asp-action="Index" class="block w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white px-4 py-3 rounded-lg font-medium transition-all text-center">
                                <i class="fas fa-upload mr-2"></i>EMPLOYEE PANEL
                            </a>
                        }
                        else if (User.IsInRole("Customer"))
                        {
                            <a asp-controller="UserDashboard" asp-action="Index" class="block w-full bg-gradient-to-r from-primary-orange to-orange-600 text-white px-4 py-3 rounded-lg font-medium transition-all text-center">
                                <i class="fas fa-user-circle mr-2"></i>MY DASHBOARD
                            </a>
                        }
                        <form asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white px-4 py-3 rounded-lg font-medium transition-all">
                                <i class="fas fa-sign-out-alt mr-2"></i>LOGOUT
                            </button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="block w-full border-2 border-white hover:bg-white hover:text-dark-navy px-4 py-3 rounded-lg font-medium transition-all text-center">
                            <i class="fas fa-user mr-2"></i>LOGIN
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="block w-full bg-primary-orange hover:bg-orange-600 text-white px-4 py-3 rounded-lg font-medium transition-all text-center">
                            <i class="fas fa-user-plus mr-2"></i>SIGN UP
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>

<!-- Search Overlay -->
<div id="search-overlay" class="hidden fixed inset-0 bg-black bg-opacity-80 z-50 flex items-center justify-center p-4">
    <div class="container mx-auto px-4 w-full max-w-3xl">
        <div class="relative bg-white rounded-lg p-4 sm:p-6">
            <div class="relative">
                <input type="text" placeholder="Search for magazines, destinations, tours..." 
                       class="w-full px-4 sm:px-6 py-3 sm:py-4 text-base sm:text-lg rounded-lg border-2 border-gray-300 focus:outline-none focus:ring-4 focus:ring-primary-blue focus:border-primary-blue">
                <button class="absolute right-3 sm:right-4 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-primary-blue transition-colors">
                    <i class="fas fa-search text-xl sm:text-2xl"></i>
                </button>
            </div>
            <button id="close-search" class="mt-4 sm:mt-6 text-gray-600 hover:text-primary-orange text-base sm:text-lg font-medium transition-colors flex items-center">
                <i class="fas fa-times mr-2"></i>Close
            </button>
        </div>
    </div>
</div>

