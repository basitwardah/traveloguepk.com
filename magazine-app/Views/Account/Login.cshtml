@model magazine_app.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary-blue to-light-blue py-12 px-4">
    <div class="bg-white rounded-lg shadow-xl p-8 max-w-md w-full">
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Welcome Back</h1>
            <p class="text-gray-600">Login to your Travelogue PK account</p>
        </div>

        <form asp-action="Login" asp-route-returnUrl="@returnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4 text-sm"></div>

            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-700 font-semibold mb-2"></label>
                <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-blue" placeholder="your.email@example.com" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="block text-gray-700 font-semibold mb-2"></label>
                <input asp-for="Password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-blue" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-6">
                <label class="flex items-center">
                    <input asp-for="RememberMe" type="checkbox" class="mr-2 h-4 w-4 text-primary-blue" />
                    <span class="text-gray-700">Remember me</span>
                </label>
            </div>

            <button type="submit" class="w-full bg-primary-orange text-white py-3 rounded-lg hover:bg-orange-600 transition font-semibold">
                <i class="fas fa-sign-in-alt mr-2"></i>Login
            </button>
        </form>

        <div class="mt-6 text-center">
            <p class="text-gray-600">
                Don't have an account? 
                <a asp-action="Register" class="text-primary-blue hover:underline font-semibold">Register here</a>
            </p>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

