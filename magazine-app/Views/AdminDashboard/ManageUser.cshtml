@model magazine_app.ViewModels.ManageUserViewModel

@{
    ViewData["Title"] = "Manage User";
    ViewData["Subtitle"] = $"Managing {Model.FullName}";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    
    <!-- User Info Card -->
    <div class="lg:col-span-1">
        <div class="bg-white rounded-xl shadow p-6">
            <div class="text-center mb-6">
                <div class="w-24 h-24 bg-gradient-to-br from-primary-orange to-orange-600 rounded-full flex items-center justify-center text-white text-3xl font-bold mx-auto mb-4">
                    @Model.FullName.Substring(0, 1).ToUpper()
                </div>
                <h2 class="text-2xl font-bold text-gray-800">@Model.FullName</h2>
                <p class="text-gray-600">@Model.Email</p>
            </div>

            <div class="space-y-3 mb-6">
                <div class="flex items-center justify-between py-2 border-b border-gray-100">
                    <span class="text-gray-600 text-sm">Account Status</span>
                    @if (Model.IsActive)
                    {
                        <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-xs font-semibold">Active</span>
                    }
                    else
                    {
                        <span class="bg-red-100 text-red-800 px-2 py-1 rounded text-xs font-semibold">Inactive</span>
                    }
                </div>

                <div class="flex items-center justify-between py-2 border-b border-gray-100">
                    <span class="text-gray-600 text-sm">Roles</span>
                    <div class="flex flex-wrap gap-1 justify-end">
                        @foreach (var role in Model.Roles)
                        {
                            <span class="px-2 py-1 rounded text-xs font-semibold
                                  @(role == "SuperAdmin" ? "bg-red-100 text-red-800" : 
                                    role == "Admin" ? "bg-purple-100 text-purple-800" : 
                                    role == "Uploader" ? "bg-blue-100 text-blue-800" : 
                                    "bg-gray-100 text-gray-800")">
                                @role
                            </span>
                        }
                    </div>
                </div>
            </div>

            <a asp-action="Users" class="block w-full bg-gray-100 hover:bg-gray-200 text-gray-800 text-center py-2 rounded-lg font-semibold transition">
                <i class="fas fa-arrow-left mr-2"></i>Back to Users
            </a>
        </div>
    </div>

    <!-- Subscription Management -->
    <div class="lg:col-span-2">
        <div class="bg-white rounded-xl shadow p-6 mb-6">
            <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                <i class="fas fa-crown text-primary-orange mr-2"></i>
                Subscription Management
            </h3>

            @if (Model.IsSubscribed && Model.SubscriptionEndDate.HasValue && Model.SubscriptionEndDate.Value > DateTime.UtcNow)
            {
                <!-- Active Subscription -->
                <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-4">
                    <div class="flex items-center justify-between mb-4">
                        <div>
                            <p class="text-sm text-green-600 font-semibold">ACTIVE SUBSCRIPTION</p>
                            <p class="text-2xl font-bold text-green-800">@Model.SubscriptionPlan</p>
                        </div>
                        <i class="fas fa-check-circle text-4xl text-green-500"></i>
                    </div>

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <p class="text-xs text-green-600">Started</p>
                            <p class="font-semibold text-green-800">@Model.SubscriptionStartDate?.ToString("MMM dd, yyyy")</p>
                        </div>
                        <div>
                            <p class="text-xs text-green-600">Expires</p>
                            <p class="font-semibold text-green-800">@Model.SubscriptionEndDate?.ToString("MMM dd, yyyy")</p>
                        </div>
                    </div>

                    <form asp-action="ExpireSubscription" asp-route-id="@Model.Id" method="post" class="inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" onclick="return confirm('Are you sure you want to expire this subscription?')"
                                class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg font-semibold transition">
                            <i class="fas fa-times-circle mr-2"></i>Expire Subscription
                        </button>
                    </form>
                </div>
            }
            else
            {
                <!-- No Subscription -->
                <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 mb-4">
                    <div class="text-center mb-4">
                        <i class="fas fa-crown text-4xl text-gray-300 mb-2"></i>
                        <p class="text-gray-600">This user does not have an active subscription</p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <!-- Monthly -->
                        <form asp-action="ActivateSubscription" asp-route-id="@Model.Id" asp-route-plan="Monthly" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="w-full bg-white hover:bg-gray-50 border-2 border-primary-blue rounded-lg p-4 transition">
                                <p class="text-2xl font-bold text-primary-blue mb-1">Monthly</p>
                                <p class="text-xs text-gray-600">1 Month Access</p>
                            </button>
                        </form>

                        <!-- Yearly -->
                        <form asp-action="ActivateSubscription" asp-route-id="@Model.Id" asp-route-plan="Yearly" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="w-full bg-primary-blue hover:bg-blue-600 text-white rounded-lg p-4 transition">
                                <div class="bg-green-500 text-xs px-2 py-1 rounded-full inline-block mb-1">BEST VALUE</div>
                                <p class="text-2xl font-bold mb-1">Yearly</p>
                                <p class="text-xs">12 Months Access</p>
                            </button>
                        </form>

                        <!-- Lifetime -->
                        <form asp-action="ActivateSubscription" asp-route-id="@Model.Id" asp-route-plan="Lifetime" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="w-full bg-primary-orange hover:bg-orange-600 text-white rounded-lg p-4 transition">
                                <p class="text-2xl font-bold mb-1">Lifetime</p>
                                <p class="text-xs">Unlimited Access</p>
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>

        <!-- Danger Zone -->
        @if (User.IsInRole("SuperAdmin"))
        {
            <div class="bg-white rounded-xl shadow p-6 border-2 border-red-200">
                <h3 class="text-xl font-bold text-red-600 mb-4 flex items-center">
                    <i class="fas fa-exclamation-triangle mr-2"></i>
                    Danger Zone
                </h3>
                <p class="text-gray-600 mb-4">Deleting this user will permanently remove all their data. This action cannot be undone.</p>
                
                <form asp-action="DeleteUser" asp-route-id="@Model.Id" method="post" class="inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" onclick="return confirm('Are you sure you want to permanently delete this user? This action cannot be undone!')"
                            class="bg-red-500 hover:bg-red-600 text-white px-6 py-2 rounded-lg font-semibold transition">
                        <i class="fas fa-trash mr-2"></i>Delete User Permanently
                    </button>
                </form>
            </div>
        }
    </div>
</div>

