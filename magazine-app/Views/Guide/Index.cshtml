@model IEnumerable<magazine_app.ViewModels.GuideListViewModel>

@{
    ViewData["Title"] = "Magazine Library";
}

<!-- Hero Section -->
<section class="relative h-64 bg-gradient-to-r from-primary-blue to-light-blue flex items-center justify-center">
    <div class="text-center text-white">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Magazine Library</h1>
        <p class="text-xl">Explore Pakistan's Beauty Through Our Magazines</p>
    </div>
</section>

<!-- Magazines Grid -->
<section class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        @foreach (var guide in Model)
        {
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
                <a asp-action="Detail" asp-route-slug="@guide.Slug">
                    <img src="@guide.CoverImagePath" alt="@guide.Title" class="w-full h-64 object-cover" />
                </a>
                <div class="p-4">
                    <h3 class="text-xl font-bold text-gray-800 mb-2">
                        <a asp-action="Detail" asp-route-slug="@guide.Slug" class="hover:text-primary-orange transition">
                            @guide.Title
                        </a>
                    </h3>
                    @if (!string.IsNullOrEmpty(guide.Summary))
                    {
                        <p class="text-gray-600 text-sm mb-4 line-clamp-3">@guide.Summary</p>
                    }
                    <div class="flex justify-between items-center">
                        <span class="text-sm text-gray-500">
                            <i class="far fa-calendar mr-1"></i>@guide.CreatedAt.ToString("MMM dd, yyyy")
                        </span>
                        <a asp-action="Detail" asp-route-slug="@guide.Slug" class="text-primary-blue hover:text-blue-700 font-semibold">
                            Learn More <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-12">
            <i class="fas fa-book-open text-6xl text-gray-300 mb-4"></i>
            <h3 class="text-2xl font-semibold text-gray-600">No magazines available yet</h3>
            <p class="text-gray-500 mt-2">Check back soon for new content!</p>
        </div>
    }
</section>

