@model dynamic

@{
    var title = ViewData["Title"] ?? "A Million Little Pieces";
    var price = ViewData["Price"] ?? "36.00";
    var oldPrice = ViewData["OldPrice"] ?? "48.00";
    var rating = ViewData["Rating"] ?? 5;
    var cardColor = ViewData["CardColor"] ?? "orange"; // orange, blue
    var imageUrl = ViewData["ImageUrl"] ?? "~/images/magazine-cover.jpg";
}

<div class="magazine-card card-hover bg-white rounded-lg shadow-lg overflow-hidden">
    <div class="relative">
        <!-- Magazine Image -->
        <div class="@(cardColor.Equals("orange") ? "bg-gradient-to-br from-orange-400 to-orange-600" : "bg-gradient-to-br from-blue-400 to-blue-600") p-6 flex items-center justify-center h-80">
            <img src="@imageUrl" alt="@title" class="h-full object-contain transform hover:scale-105 transition-transform duration-300" 
                 onerror="this.src='https://via.placeholder.com/300x400/FF6B35/FFFFFF?text=Magazine'">
        </div>
        
        <!-- Favorite Icon -->
        <button class="absolute top-4 right-4 bg-white text-gray-600 hover:text-red-500 rounded-full w-10 h-10 flex items-center justify-center shadow-lg transition-all hover:scale-110">
            <i class="far fa-heart"></i>
        </button>
        
        <!-- Badge -->
        <div class="absolute bottom-4 left-4 bg-white text-@(cardColor)-500 px-4 py-1 rounded-full text-sm font-semibold shadow">
            OVERNIGHT TRIPS
        </div>
    </div>
    
    <div class="p-4">
        <!-- Rating -->
        <div class="flex items-center mb-2">
            @for (int i = 0; i < 5; i++)
            {
                <i class="fas fa-star text-yellow-400 text-sm"></i>
            }
        </div>
        
        <!-- Title -->
        <h3 class="text-lg font-semibold text-gray-800 mb-3 line-clamp-2">@title</h3>
        
        <!-- Price -->
        <div class="flex items-center justify-between">
            <div>
                <span class="text-2xl font-bold text-primary-orange">$@price</span>
                <span class="text-sm text-gray-400 line-through ml-2">$@oldPrice</span>
            </div>
            
            <!-- Add to Cart Button -->
            <button onclick="addToCart(this)" class="bg-primary-orange hover:bg-orange-600 text-white rounded-full w-10 h-10 flex items-center justify-center transition-all hover:scale-110 shadow-lg">
                <i class="fas fa-shopping-cart"></i>
            </button>
        </div>
    </div>
</div>

