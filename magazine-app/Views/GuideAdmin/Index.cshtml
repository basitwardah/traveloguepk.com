@model IEnumerable<magazine_app.ViewModels.GuideListViewModel>

@{
    ViewData["Title"] = "Manage Magazines";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Manage Magazines</h1>
        <a asp-action="Create" class="bg-primary-orange text-white px-6 py-2 rounded-lg hover:bg-orange-600 transition">
            <i class="fas fa-plus mr-2"></i>Add New Magazine
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
            @TempData["Error"]
        </div>
    }

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Cover</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Title</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created By</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created At</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var guide in Model)
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <img src="@guide.CoverImagePath" alt="@guide.Title" class="h-16 w-16 object-cover rounded" />
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm font-medium text-gray-900">@guide.Title</div>
                            <div class="text-sm text-gray-500">@guide.Slug</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            @if (guide.IsPublished)
                            {
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Published</span>
                            }
                            else
                            {
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Draft</span>
                            }
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@guide.CreatedByName</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@guide.CreatedAt.ToString("MMM dd, yyyy")</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <a asp-action="Details" asp-route-id="@guide.Id" class="text-primary-blue hover:text-blue-900 mr-3">View</a>
                            <a asp-action="Edit" asp-route-id="@guide.Id" class="text-green-600 hover:text-green-900 mr-3">Edit</a>
                            <form asp-action="Delete" asp-route-id="@guide.Id" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this magazine?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

