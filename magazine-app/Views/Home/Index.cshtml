<style>
    @@keyframes float {
        0%, 100% {
            transform: translateY(0px) translateX(-50%);
        }
        50% {
            transform: translateY(-20px) translateX(-50%);
        }
    }
    
    .animate-float {
        animation: float 3s ease-in-out infinite;
    }
</style>
