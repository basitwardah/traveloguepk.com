@{
    ViewData["Title"] = "My Profile";
}

<!-- Profile Banner -->
<section class="profile-banner" style="background-image: url('https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=1920');">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent to-dark-navy/70"></div>
</section>

<!-- Profile Header -->
<section class="bg-white border-b border-gray-200">
    <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center md:items-end -mt-20 pb-6">
            <!-- Profile Avatar -->
            <div class="profile-avatar rounded-full overflow-hidden bg-white mb-4 md:mb-0">
                <img src="~/images/user-profile.jpg" alt="Jeremy Rose" class="w-full h-full object-cover" 
                     onerror="this.src='https://ui-avatars.com/api/?name=Jeremy+Rose&size=150&background=FF6B35&color=fff'">
            </div>
            
            <!-- Profile Info -->
            <div class="md:ml-8 text-center md:text-left flex-1">
                <h1 class="text-3xl font-bold text-gray-800 mb-1">Jeremy Rose</h1>
                <p class="text-primary-orange font-semibold mb-2">Customer</p>
                <p class="text-gray-600 flex items-center justify-center md:justify-start">
                    <i class="fas fa-map-marker-alt mr-2"></i>
                    New York/NY
                </p>
            </div>
            
            <!-- Options Menu -->
            <div>
                <button class="text-gray-600 hover:text-gray-800 p-2">
                    <i class="fas fa-ellipsis-h text-2xl"></i>
                </button>
            </div>
        </div>
    </div>
</section>

