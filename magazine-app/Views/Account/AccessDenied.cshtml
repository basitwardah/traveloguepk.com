@{
    ViewData["Title"] = "Access Denied";
}

<section class="min-h-screen flex items-center justify-center bg-gray-100 py-12 px-4">
    <div class="text-center">
        <div class="mb-8">
            <i class="fas fa-lock text-8xl text-red-600"></i>
        </div>
        <h1 class="text-4xl font-bold text-gray-800 mb-4">Access Denied</h1>
        <p class="text-xl text-gray-600 mb-8">
            You do not have permission to access this page.
        </p>
        <div class="flex gap-4 justify-center">
            <a asp-controller="Home" asp-action="Index" class="bg-primary-blue text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition">
                <i class="fas fa-home mr-2"></i>Go Home
            </a>
            <a asp-controller="Account" asp-action="Login" class="bg-primary-orange text-white px-6 py-3 rounded-lg hover:bg-orange-600 transition">
                <i class="fas fa-sign-in-alt mr-2"></i>Login
            </a>
        </div>
    </div>
</section>

