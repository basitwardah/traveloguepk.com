@{
    ViewData["Title"] = "About Us";
}
<style>
    .custom-mb {
        margin-bottom: 10vh !important; /* 10% of viewport height */

    }

</style>
<!-- Hero Section -->
<section class="relative h-96">
    <div class="absolute inset-0">
        <img src="~/images/about-frontpage.png" alt="About Us" class="w-full h-full object-cover"
             onerror="this.src='https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=1920'">
        <div class="absolute inset-0 bg-dark-navy bg-opacity-60"></div>
    </div>


    <div class="relative container mx-auto px-4 h-full flex-col justify-center custom-mb-6">

        <!-- Breadcrumb -->
        <nav class="text-white mb-4">
            <ol class="flex items-center space-x-2 text-sm">
                <li><a asp-controller="Home" asp-action="Index" class="hover:text-primary-orange">Home</a></li>
                <li><i class="fas fa-chevron-right text-xs"></i></li>
                <li>About Us</li>
            </ol>
        </nav>
        

        <div class="orange-label mb-6 animate-fade-in">
            TRAVELOGUE PK
        </div>
        @* <div class="orange-label mb-4">
            TRAVELOGUE PK
        </div> *@
        <h1 class="text-5xl md:text-6xl font-bold text-white">
            ABOUT <span class="text-primary-orange">US</span>
        </h1>
        <p class="text-white text-lg mt-4 max-w-2xl">
            Travelogue Pk - Your Gateway to Pakistan's Beauty Resources! Join your ultimate guide, your compass and discover the diversity of Pakistan with us.
        </p>
    </div>
</section>

<!-- Mountain Divider -->
<div class="mountain-divider mountain-divider-white"></div>

<!-- What We Offer Section -->
<section class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">
                WHAT WE <span class="text-primary-orange">OFFER</span>
            </h2>
            <p class="text-gray-600 text-lg max-w-3xl mx-auto">
                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
            </p>
        </div>
        
        <!-- Service Cards Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
            <!-- Service 1 -->
            <div class="service-icon-box bg-white border-2 border-gray-200 rounded-2xl p-8 text-center hover:border-dark-navy">
                <div class="bg-dark-navy text-white w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-mountain text-3xl"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-3">Explore Hidden Gems</h3>
                <p class="text-gray-600">
                    From lush valleys to majestic mountains, experience Pakistan like never before.
                </p>
            </div>
            
            <!-- Service 2 -->
            <div class="service-icon-box bg-white border-2 border-primary-orange rounded-2xl p-8 text-center hover:border-orange-600">
                <div class="bg-primary-orange text-white w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-hiking text-3xl"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-3">Hassle-Free Travel</h3>
                <p class="text-gray-600">
                    Enjoy smooth travel bookings, guided tours, and personalized travel plans.
                </p>
            </div>
            
            <!-- Service 3 -->
            <div class="service-icon-box bg-white border-2 border-gray-200 rounded-2xl p-8 text-center hover:border-dark-navy">
                <div class="bg-dark-navy text-white w-20 h-20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-landmark text-3xl"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-800 mb-3">Cultural Experiences</h3>
                <p class="text-gray-600">
                    Dive into vibrant traditions, local cuisines, and unique cultural festivals.
                </p>
            </div>
        </div>
        
        <!-- Services Diagram -->
        <div class="relative max-w-6xl mx-auto py-16">
            <!-- SVG Wave Line -->
            <svg class="absolute inset-0 w-full h-full" viewBox="0 0 1200 400" preserveAspectRatio="none">
                <path d="M 0 200 Q 200 100, 400 200 T 800 200 T 1200 200" stroke="#FF6B35" stroke-width="2" fill="none" stroke-dasharray="10,5" opacity="0.5"/>
            </svg>
            
            <div class="relative grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-8">
                <!-- Air Tickets -->
                <div class="text-center">
                    <div class="bg-white border-2 border-gray-200 rounded-xl p-6 mb-2 hover:shadow-lg transition-all">
                        <i class="fas fa-plane text-4xl text-primary-orange mb-2"></i>
                    </div>
                    <h4 class="font-bold text-gray-800">Air Tickets</h4>
                    <p class="text-sm text-gray-600">Book your flight</p>
                </div>
                
                <!-- Hotels -->
                <div class="text-center">
                    <div class="bg-white border-2 border-gray-200 rounded-xl p-6 mb-2 hover:shadow-lg transition-all">
                        <i class="fas fa-hotel text-4xl text-primary-orange mb-2"></i>
                    </div>
                    <h4 class="font-bold text-gray-800">Hotels</h4>
                    <p class="text-sm text-gray-600">Comfortable stays wherever you go</p>
                </div>
                
                <!-- Transport -->
                <div class="text-center">
                    <div class="bg-white border-2 border-gray-200 rounded-xl p-6 mb-2 hover:shadow-lg transition-all">
                        <i class="fas fa-bus text-4xl text-primary-orange mb-2"></i>
                    </div>
                    <h4 class="font-bold text-gray-800">Transport</h4>
                    <p class="text-sm text-gray-600">Seamless rides, Stress-free travel</p>
                </div>
                
                <!-- Activities -->
                <div class="text-center">
                    <div class="bg-white border-2 border-gray-200 rounded-xl p-6 mb-2 hover:shadow-lg transition-all">
                        <i class="fas fa-hiking text-4xl text-primary-orange mb-2"></i>
                    </div>
                    <h4 class="font-bold text-gray-800">Activities</h4>
                    <p class="text-sm text-gray-600">Exciting experiences at every traveler, from culture to adventure, really it all</p>
                </div>
                
                <!-- Adventures -->
                <div class="text-center">
                    <div class="bg-white border-2 border-gray-200 rounded-xl p-6 mb-2 hover:shadow-lg transition-all">
                        <i class="fas fa-umbrella-beach text-4xl text-primary-orange mb-2"></i>
                    </div>
                    <h4 class="font-bold text-gray-800">Adventures</h4>
                    <p class="text-sm text-gray-600">Thrill seeker mode activated! Experience Pakistan's wild side</p>
                </div>
                
                <!-- Tour Packages -->
                <div class="text-center">
                    <div class="bg-white border-2 border-gray-200 rounded-xl p-6 mb-2 hover:shadow-lg transition-all">
                        <i class="fas fa-suitcase-rolling text-4xl text-primary-orange mb-2"></i>
                    </div>
                    <h4 class="font-bold text-gray-800">Tour Packages</h4>
                    <p class="text-sm text-gray-600">Discover Pakistan's diverse destinations. Explore the world with ease. Order experience now.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Mountain Divider -->
<div class="mountain-divider mountain-divider-orange"></div>

<!-- Video Section -->
<section class="py-20 bg-primary-orange text-white">
    <div class="container mx-auto px-4">
        <div class="text-center mb-12">
            <h2 class="text-4xl md:text-5xl font-bold mb-4">
                LET'S MAKE YOUR JOURNEY MOMENTOUS
            </h2>
        </div>
        
        <div class="max-w-4xl mx-auto">
            <div class="relative rounded-2xl overflow-hidden shadow-2xl">
