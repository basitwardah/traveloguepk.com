@model magazine_app.ViewModels.GuideDetailViewModel

@{
    ViewData["Title"] = "Magazine Details";
}

<div class="container mx-auto px-4 py-8 max-w-4xl">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-800">Magazine Details</h1>
        <a asp-action="Index" class="bg-gray-300 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-400 transition">
            Back to List
        </a>
    </div>

    <div class="bg-white shadow-md rounded-lg p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <img src="@Model.CoverImagePath" alt="@Model.Title" class="w-full rounded-lg shadow-md" />
            </div>
            
            <div>
                <h2 class="text-2xl font-bold text-gray-800 mb-4">@Model.Title</h2>
                
                <div class="mb-4">
                    <span class="font-semibold text-gray-700">Status:</span>
                    @if (Model.IsPublished)
                    {
                        <span class="ml-2 px-3 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-800">Published</span>
                    }
                    else
                    {
                        <span class="ml-2 px-3 py-1 text-sm font-semibold rounded-full bg-yellow-100 text-yellow-800">Draft</span>
                    }
                </div>

                <div class="mb-4">
                    <span class="font-semibold text-gray-700">Slug:</span>
                    <span class="text-gray-600">@Model.Slug</span>
                </div>

                <div class="mb-4">
                    <span class="font-semibold text-gray-700">Created By:</span>
                    <span class="text-gray-600">@Model.CreatedByName (@Model.CreatedByEmail)</span>
                </div>

                <div class="mb-4">
                    <span class="font-semibold text-gray-700">Created At:</span>
                    <span class="text-gray-600">@Model.CreatedAt.ToString("MMMM dd, yyyy hh:mm tt")</span>
                </div>

                @if (Model.UpdatedAt.HasValue)
                {
                    <div class="mb-4">
                        <span class="font-semibold text-gray-700">Last Updated:</span>
                        <span class="text-gray-600">@Model.UpdatedAt.Value.ToString("MMMM dd, yyyy hh:mm tt")</span>
                    </div>
                }

                <div class="mb-4">
                    <span class="font-semibold text-gray-700">PDF File:</span>
                    <a href="@Model.PdfPath" target="_blank" class="text-primary-blue hover:underline ml-2">
                        <i class="fas fa-file-pdf mr-1"></i>View PDF
                    </a>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Summary))
        {
            <div class="mt-6">
                <h3 class="text-xl font-semibold text-gray-800 mb-2">Summary</h3>
                <p class="text-gray-600 leading-relaxed">@Model.Summary</p>
            </div>
        }

        <div class="mt-6 flex gap-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="bg-primary-blue text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition">
                <i class="fas fa-edit mr-2"></i>Edit
            </a>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="inline" onsubmit="return confirm('Are you sure you want to delete this magazine?');">
                @Html.AntiForgeryToken()
                <button type="submit" class="bg-red-600 text-white px-6 py-2 rounded-lg hover:bg-red-700 transition">
                    <i class="fas fa-trash mr-2"></i>Delete
                </button>
            </form>
        </div>
    </div>
</div>

