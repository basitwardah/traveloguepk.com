@model magazine_app.ViewModels.GuideCreateViewModel

@{
    ViewData["Title"] = "Create Magazine";
}

<div class="container mx-auto px-4 py-8 max-w-4xl">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Create New Magazine</h1>

    <div class="bg-white shadow-md rounded-lg p-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            <div class="mb-4">
                <label asp-for="Title" class="block text-gray-700 font-semibold mb-2"></label>
                <input asp-for="Title" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-blue" />
                <span asp-validation-for="Title" class="text-red-600 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Summary" class="block text-gray-700 font-semibold mb-2"></label>
                <textarea asp-for="Summary" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-blue"></textarea>
                <span asp-validation-for="Summary" class="text-red-600 text-sm"></span>
            </div>

            <!-- Category Selection -->
            <div class="mb-4">
                <label asp-for="CategoryId" class="block text-gray-700 font-semibold mb-2">Category</label>
                <select asp-for="CategoryId" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-blue">
                    <option value="">-- Select Category (Optional) --</option>
                    @if (ViewBag.Categories != null)
                    {
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-red-600 text-sm"></span>
            </div>

            <!-- Pricing Section -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                    <label asp-for="CurrentPrice" class="block text-gray-700 font-semibold mb-2">Current Price</label>
                    <div class="flex">
                        <span class="inline-flex items-center px-3 text-gray-700 bg-gray-200 border border-r-0 border-gray-300 rounded-l-lg">
                            $
                        </span>
                        <input asp-for="CurrentPrice" type="number" step="0.01" min="0" class="flex-1 px-4 py-2 border border-gray-300 rounded-r-lg focus:outline-none focus:ring-2 focus:ring-primary-blue" />
                    </div>
                    <p class="text-gray-500 text-sm mt-1">Set to 0 for free access</p>
                    <span asp-validation-for="CurrentPrice" class="text-red-600 text-sm"></span>
                </div>
                
                <div>
                    <label asp-for="OldPrice" class="block text-gray-700 font-semibold mb-2">Old Price (Optional)</label>
                    <div class="flex">
                        <span class="inline-flex items-center px-3 text-gray-700 bg-gray-200 border border-r-0 border-gray-300 rounded-l-lg">
                            $
                        </span>
                        <input asp-for="OldPrice" type="number" step="0.01" min="0" class="flex-1 px-4 py-2 border border-gray-300 rounded-r-lg focus:outline-none focus:ring-2 focus:ring-primary-blue" />
                    </div>
                    <p class="text-gray-500 text-sm mt-1">For showing discounts</p>
                    <span asp-validation-for="OldPrice" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="CoverImage" class="block text-gray-700 font-semibold mb-2"></label>
                <input asp-for="CoverImage" type="file" accept=".jpg,.jpeg,.png,.webp" class="w-full px-4 py-2 border border-gray-300 rounded-lg" />
                <span asp-validation-for="CoverImage" class="text-red-600 text-sm"></span>
                <p class="text-gray-500 text-sm mt-1">Allowed formats: JPG, PNG, WEBP (Max 5MB)</p>
            </div>

            <div class="mb-4">
                <label asp-for="PdfFile" class="block text-gray-700 font-semibold mb-2"></label>
                <input asp-for="PdfFile" type="file" accept=".pdf" class="w-full px-4 py-2 border border-gray-300 rounded-lg" />
                <span asp-validation-for="PdfFile" class="text-red-600 text-sm"></span>
                <p class="text-gray-500 text-sm mt-1">PDF file only (Max 50MB)</p>
            </div>

            <div class="mb-6">
                <label class="flex items-center">
                    <input asp-for="IsPublished" type="checkbox" class="mr-2 h-4 w-4 text-primary-blue" />
                    <span class="text-gray-700">Publish Immediately</span>
                </label>
            </div>

            <div class="flex gap-4">
                <button type="submit" class="bg-primary-orange text-white px-6 py-2 rounded-lg hover:bg-orange-600 transition">
                    <i class="fas fa-save mr-2"></i>Create Magazine
                </button>
                <a asp-action="Index" class="bg-gray-300 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-400 transition">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

