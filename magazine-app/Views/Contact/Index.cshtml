@{
    ViewData["Title"] = "Contact Us";
}

<!-- Hero Section -->
<section class="relative h-96">
    <div class="absolute inset-0">
        <img src="~/images/contact-hero.jpg" alt="Contact Us" class="w-full h-full object-cover" 
             onerror="this.src='https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=1920'">
        <div class="absolute inset-0 bg-dark-navy bg-opacity-60"></div>
    </div>
    
    <div class="relative container mx-auto px-4 h-full flex flex-col justify-center">
        <!-- Breadcrumb -->
        <nav class="text-white mb-4">
            <ol class="flex items-center space-x-2 text-sm">
                <li><a asp-controller="Home" asp-action="Index" class="hover:text-primary-orange"><i class="fas fa-home"></i> Home</a></li>
                <li><i class="fas fa-chevron-right text-xs"></i></li>
                <li>Contact Us</li>
            </ol>
        </nav>
        
        <div class="orange-label mb-4">
            TRAVELOGUE PK
        </div>
        <h1 class="text-5xl md:text-6xl font-bold text-white">
            CONTACT US
        </h1>
    </div>
</section>

<!-- Mountain Divider -->
<div class="mountain-divider mountain-divider-white"></div>

<!-- Contact Section -->
<section class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
            <!-- Left: Contact Information -->
            <div>
                <h2 class="text-4xl font-bold text-dark-navy mb-4">Get In Touch</h2>
                <p class="text-gray-600 mb-8">
                    Want to get in touch? We'd love to hear from you. Here's how you can reach us.
                </p>
                
                <!-- Office Hours -->
                <div class="mb-8">
                    <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-clock text-primary-orange mr-3"></i>
                        Office Hour
                    </h3>
                    <div class="pl-10 space-y-2">
                        <p class="text-gray-700">Monday - Friday: 8 AM - 5:30 PM</p>
                        <p class="text-gray-700">Saturday - Sunday: Closed</p>
                    </div>
                </div>
                
                <!-- Office Location -->
                <div class="mb-8">
                    <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-map-marker-alt text-primary-orange mr-3"></i>
                        Office Location:
                    </h3>
                    <div class="pl-10">
                        <p class="text-gray-700 mb-2">
                            Office #555, First floor, Ceaser's Tower,<br>
                            Shahra-e-faisal, Karachi.
                        </p>
                        <a href="#" class="text-primary-orange hover:text-orange-600 font-semibold inline-flex items-center">
                            <i class="fas fa-map-marked-alt mr-2"></i>
                            Map & Directions
                        </a>
                    </div>
                </div>
                
                <!-- Phone Numbers -->
                <div class="mb-8">
                    <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-phone text-primary-orange mr-3"></i>
                        Phone No:
                    </h3>
                    <div class="pl-10 space-y-2">
                        <a href="tel:+92-322-1234567" class="text-gray-700 hover:text-primary-orange flex items-center">
                            <i class="fas fa-phone-alt text-primary-orange mr-3"></i>
                            +92 322 1234567
                        </a>
                        <a href="tel:+92-333-7654321" class="text-gray-700 hover:text-primary-orange flex items-center">
                            <i class="fas fa-phone-alt text-primary-orange mr-3"></i>
                            +92 333 7654321
                        </a>
                    </div>
                </div>
                
                <!-- Background Map Image -->
                <div class="relative mt-12 rounded-lg overflow-hidden dot-pattern-bg h-64 bg-gray-100"></div>
            </div>
            
            <!-- Right: Contact Form -->
            <div>
                <div class="bg-white rounded-2xl border-4 border-primary-orange p-8 shadow-xl">
                    <h2 class="text-3xl font-bold text-dark-navy mb-6 text-center">Send Us a Message</h2>
                    
                    <form class="contact-form space-y-4">
                        <!-- Name Fields -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div class="relative">
                                <i class="fas fa-user absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                <input type="text" placeholder="First name" 
                                       class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-lg focus:border-primary-blue focus:ring-2 focus:ring-primary-blue focus:ring-opacity-20 transition-all">
                            </div>
                            <div class="relative">
                                <i class="fas fa-user absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                                <input type="text" placeholder="Last name" 
                                       class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-lg focus:border-primary-blue focus:ring-2 focus:ring-primary-blue focus:ring-opacity-20 transition-all">
                            </div>
                        </div>
                        
                        <!-- Phone Number -->
                        <div class="relative">
                            <i class="fas fa-phone absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                            <input type="tel" placeholder="Phone number" 
                                   class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-lg focus:border-primary-blue focus:ring-2 focus:ring-primary-blue focus:ring-opacity-20 transition-all">
                        </div>
                        
                        <!-- Email -->
                        <div class="relative">
                            <i class="fas fa-envelope absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                            <input type="email" placeholder="Email" 
                                   class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-lg focus:border-primary-blue focus:ring-2 focus:ring-primary-blue focus:ring-opacity-20 transition-all">
                        </div>
                        
                        <!-- Subject -->
                        <div class="relative">
                            <i class="fas fa-tag absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                            <input type="text" placeholder="Subject" 
                                   class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-lg focus:border-primary-blue focus:ring-2 focus:ring-primary-blue focus:ring-opacity-20 transition-all">
                        </div>
                        
                        <!-- Message -->
                        <div class="relative">
                            <i class="fas fa-comment-dots absolute left-4 top-6 text-gray-400"></i>
                            <textarea placeholder="Message" rows="5" 
                                      class="w-full pl-12 pr-4 py-3 border border-gray-300 rounded-lg focus:border-primary-blue focus:ring-2 focus:ring-primary-blue focus:ring-opacity-20 transition-all resize-none"></textarea>
                        </div>
                        
                        <!-- Submit Button -->
                        <button type="submit" class="w-full bg-primary-orange hover:bg-orange-600 text-white font-bold py-4 rounded-lg transition-all shadow-lg text-lg">
                            SEND MESSAGE NOW
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

